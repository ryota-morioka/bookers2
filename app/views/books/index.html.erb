<%= render 'list', book: @book %>
<div class="books">
  <% @books.each do |book| %>
    <div class="book">
      <%= link_to book_path(book) do %>
        <%= image_tag book.user.get_profile_image(100,100), class: "user-image" %>
      <% end %>
      <h2 class="book-title"><%= book.title %></h2>
      <p class="book-body"><%= book.body %></p>
    </div>
  <% end %>
</div>