<div class="user-info">
  <p>投稿ユーザー画像：<%= image_tag current_user.get_profile_image(100,100) %></p>
  <h2 class="user-name"><%= current_user.name %></h2>
  <p class="user-introduction"><%= current_user.introduction %></p>
  <%= link_to "プロフィールを編集", edit_user_path(current_user), class: "edit-profile-link" %>
</div>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>

<% end %>