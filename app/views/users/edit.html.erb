<h1>Edit User Profile</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :introduction %>
    <%= form.text_area :introduction %>
  </div>

  <div class="actions">
    <%= form.submit 'Update' %>
  </div>
<% end %>

<%= link_to 'Back', user_path(@user) %>
<%= link_to 'Show Profile', @user %>